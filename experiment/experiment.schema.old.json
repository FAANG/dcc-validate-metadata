{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "A representation of a person, company, organization, or place",
    "type": "object",
    "properties": {
	"IDENTIFIERS": {
	    "type": "object",
	    "properties": {
		"PRIMARY_ID": {
		    "type": "string",
		    "pattern": "^ERX",
		    "minLength": 4
		}
	    },
	    "required": ["PRIMARY_ID"]
	},
	"STUDY_REF": {
	    "type": "object",
	    "properties": {
		"IDENTIFIERS": {
		    "type": "object",
		    "properties": {
			"PRIMARY_ID": {
			    "type": "string",
			    "pattern": "^ERP",
			    "minLength": 4
			}
		    },
		    "required": ["PRIMARY_ID"]
		}
	    },
	    "required": ["IDENTIFIERS"]
	},
	"DESIGN": {
	    "type": "object",
	    "properties": {
		"type": "object",
		"SAMPLE_DESCRIPTOR": {
		    "properties": {
			"type": "object",
			"IDENTIFIERS": {
			    "properties": {
				"PRIMARY_ID": {
				    "type": "string",
				    "pattern": "^ERS",
				    "minLength": 4
				}
			    },
			    "required": ["PRIMARY_ID"]
			}
		    },
		    "required": ["IDENTIFIERS"]
		}
	    },
	    "required": ["SAMPLE_DESCRIPTOR"]
	}
    },
    "required": ["IDENTIFIERS","STUDY_REF","DESIGN"]
}
